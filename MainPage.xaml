<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VizsgaMaui.MainPage"
             Title="CastL - Mobile"
             >

    <CollectionView x:Name="dataGrid">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Stroke="Gray" 
                    StrokeThickness="2" 
                    StrokeShape="RoundRectangle 20"
       
                    Margin="10">
                    <Grid RowDefinitions="*,Auto,Auto" 
                      ColumnDefinitions="*,Auto"
                      RowSpacing="5" 
                      ColumnSpacing="100">

                        <Frame Grid.Row="0" 
                           Grid.ColumnSpan="2"
                           HeightRequest="350"
                           BackgroundColor="LightGray"
                           CornerRadius="15"
                           Margin="0,0,0,10">
                            <Label Text="KÉP ITT" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center"
                               FontSize="12" 
                               TextColor="Gray"/>
                        </Frame>

                        <Label Grid.Row="1" 
                           Grid.Column="0"
                           Text="{Binding name}" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           VerticalOptions="Start"/>

                        <Label Grid.Row="2" 
                           Grid.Column="0"
                           Text="{Binding email}" 
                           FontSize="14" 
                           TextColor="Gray"
                           LineBreakMode="TailTruncation"/>

                        <Border Grid.Row="2" 
                            Grid.Column="1"
                            Stroke="Blue" 
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 10"
                            Padding="8,4"
                            HorizontalOptions="End">
                            <Label Text="{Binding userType}" 
                               FontSize="12" 
                               TextColor="Blue"/>
                        </Border>
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
