<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VizsgaMaui.MainPage"
             Title="CastL - Mobile App"
             >

    <CollectionView x:Name="dataGrid">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Stroke="Gray" 
                    StrokeThickness="2" 
                    StrokeShape="RoundRectangle 20"
       
                    Margin="10">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                      ColumnDefinitions="*,Auto"
                      RowSpacing="5">

                        <Border Grid.Row="0" 
                           Grid.ColumnSpan="2"
                           HeightRequest="500"
                           BackgroundColor="LightGray"
                           
                           Margin="0,0,0,10">
                            <Image Source="{Binding profilePictureUrl}" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center"
                               WidthRequest="360"
                               HeightRequest="500"
                               Aspect="AspectFill"/>
                        </Border>


                        <Label Grid.Row="1" 
                           Grid.Column="0"
                           Text="{Binding name}" 
                           FontSize="35" 
                           Margin="11,20,0,0"
                           FontAttributes="Bold"
                           VerticalOptions="Start"/>
                        <Label Grid.Row="2" 
                           Grid.Column="0"
                           Margin="11,0,0,0"
                           Text="{Binding email}" 
                           FontSize="20" 
                           TextColor="Gray"
                           LineBreakMode="TailTruncation"/>
                        <Label Grid.Row="3" 
                           Grid.Column="0"
                           Margin="11,20,0,0"
                           Text="{Binding bio}" 
                           FontSize="15" 
                           TextColor="Gray"
                           LineBreakMode="TailTruncation"/>
                        <Border Grid.Row="4" 
                            Grid.Column="1"
                            Stroke="Blue" 
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 10"
                            Padding="8,4"
                            Margin="11,0,10,10"
                            HorizontalOptions="End">
                            <Label Text="{Binding userType}" 
                               FontSize="15" 
                               TextColor="Blue"/>
                        </Border>
                        
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
