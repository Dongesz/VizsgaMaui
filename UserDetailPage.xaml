<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="VizsgaMaui.UserDetailPage"
    Title="Player">

    <ScrollView>
        <Grid
            Padding="16"
            ColumnDefinitions="*,120"
            RowDefinitions="Auto,Auto,Auto,Auto,Auto"
            RowSpacing="10"
            ColumnSpacing="16">

            <!-- NAME -->
            <Label
                Grid.Row="0"
                Grid.Column="0"
                x:Name="NameLabel"
                FontSize="26"
                FontAttributes="Bold" />

            <!-- EMAIL -->
            <Label
                Grid.Row="1"
                Grid.Column="0"
                x:Name="EmailLabel"
                FontSize="16"
                TextColor="Gray" />

            <!-- PROFILE IMAGE -->
            <Border
                Grid.Row="0"
                Grid.Column="1"
                Grid.RowSpan="2"
                Stroke="LightGray"
                BackgroundColor="White"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10"
                Padding="4">

                <Image
                    x:Name="ProfileImage"
                    HeightRequest="100"
                    WidthRequest="100"
                    Aspect="AspectFill" />
            </Border>

            <!-- USER TYPE -->
            <Border
                Grid.Row="2"
                Grid.Column="1"
                Stroke="LightGray"
                BackgroundColor="White"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10"
                Padding="12,4"
                Margin="55,0,0,0"
                HorizontalOptions="Start">

                <Label
                    x:Name="UserTypeLabel"
                    FontSize="14"
                    TextColor="Black" />
            </Border>

            <!-- BIO -->
            <Label
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                x:Name="BioLabel"
                FontSize="16"
                Margin="0,10,0,10" />

            <!-- STATS -->
            <Grid
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                ColumnDefinitions="*,*,*"
                Margin="0,10,0,0">

                <!-- TOTAL SCORE -->
                <VerticalStackLayout HorizontalOptions="Center">
                    <Label
                        Text="SCORE"
                        FontSize="12"
                        TextColor="Gray"
                        HorizontalTextAlignment="Center" />
                    <Label
                        x:Name="TotalScoreLabel"
                        FontSize="18"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

                <!-- TOTAL XP -->
                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                    <Label
                        Text="XP"
                        FontSize="12"
                        TextColor="Gray"
                        HorizontalTextAlignment="Center" />
                    <Label
                        x:Name="TotalXpLabel"
                        FontSize="18"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

                <!-- CREATED AT -->
                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                    <Label
                        Text="CREATED"
                        FontSize="12"
                        TextColor="Gray"
                        HorizontalTextAlignment="Center" />
                    <Label
                        x:Name="CreatedAtLabel"
                        FontSize="14"
                        HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

            </Grid>

        </Grid>
    </ScrollView>
</ContentPage>
